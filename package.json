{
  "name": "react-landing-page",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "babel src -d dist",
    "start": "x0 docs",
    "test": "jest",
    "build": "x0 build docs -d site",
    "deploy": "gh-pages -d site",
    "cover": "jest --coverage --coverageReporters html lcov && codecov"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "rebass": "^2.0.0",
    "refunk": "^3.0.1",
    "styled-system": "^2.2.5"
  },
  "devDependencies": {
    "@compositor/kit-snapshot": "^1.0.24",
    "@compositor/x0": "^6.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codecov": "^3.0.0",
    "gh-pages": "^1.2.0",
    "jest": "^22.4.3",
    "jest-styled-components": "^5.0.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2"
  },
  "peerDependencies": {
    "styled-components": ">=3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ]
  },
  "x0": {
    "title": "React Landing Page",
    "template": "./docs/_template.js",
    "basename": "/react-landing-page",
    "static": true
